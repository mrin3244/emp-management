<!-- header -->
{{>header}}
<!-- /header -->
    <!-- header-menu -->
    {{>header-menu}}
    <!-- /header-menu -->
  
    <!-- Left side column. contains the logo and sidebar menu -->
    {{>side-menu-admin}}
    <!-- /sidebar menu-->


<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Employees Details</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">View All</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="row">
          <div class="col-md-12">
              <div class="box">
                <div class="box-header">
                <h3 class="box-title">All Employees Details</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="employeeTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Date of Birth</th>
                                <th>Job Title</th>
                                <th>Phone</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each employees}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.dob}}</td>
                                <td>{{this.jobtitle}}</td>
                                <td>{{this.phone}}</td>
                                <td><a class="btn btn-primary btn-sm" href="/home/viewone/{{this._id}}">View</a></td>
                                <td><a class="btn btn-warning btn-sm" href="/home/edit/{{this._id}}">Edit</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/home/delete/{{this._id}}">Delete</a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
          </div>
      </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
<!--footer -->
{{>footer}}
