<!-- header -->
{{>header}}
<!-- /header -->
    <!-- header-menu -->
    {{>header-menu}}
    <!-- /header-menu -->
  
    <!-- Left side column. contains the logo and sidebar menu -->
    {{>side-menu-admin}}
    <!-- /sidebar menu-->


<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Attendance History</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Attendance</a></li>
        <li class="active">Attendance History</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="row">
          <div class="col-md-8">
              <div class="box">
                <div class="box-header">
                <h3 class="box-title">Employee Attendance History</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div>
                        <table>
                            <form role="form" action="/attendance/historybydate/{{empId}}" method="POST">
                            <tr>
                                <td><label>Start Date</label></td>
                                <td><label>End Date</label></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" name="startDate" class="form-control pull-right" id="datepicker1" autocomplete="off">
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" name="endDate" class="form-control pull-right" id="datepicker2" autocomplete="off">
                                    </div>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-info pull-right">Submit</button>
                                </td>
                            </tr>
                            </form>
                        </table>
                    </div>
                    <h3 class="box-title">Employee Attendance History for this months</h3>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Check In</th>
                                <th>Check In status</th>
                                <th>Check Out</th>
                                <th>Check Out status</th>
                                <th>Working Hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#history}}
                            <tr>
                                <td>{{this.days}}</td>
                                <td>{{this.intime}}</td>
                                <td>{{this.instatus}} {{this.intimediff}}</td>
                                <td>{{this.outtime}}</td>
                                <td>{{this.outstatus}} {{this.outtimediff}}</td>
                                <td>{{#ifEq this.workhours "Invalid date"}}in office {{else}}{{this.workhours}}{{/ifEq}}</td>
                            </tr>
                            {{/history}}
                        </tbody>
                        
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
          </div>
      </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
<!--footer -->
{{>footer}}
<!--/footer -->