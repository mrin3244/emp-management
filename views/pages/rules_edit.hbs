<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Rules</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Edit Rules</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
              <div class="box-header with-border">
                <h3 class="box-title">Edit Rules</h3>
              </div>
              <div class="box-body">
                <form action="/rules/edit" method="post">
                  <input type="hidden" name="ruleId" value="{{rule._id}}" />
                    <div class="form-group">
                        <label>Rule Name</label>
                        <input type="text" class="form-control" value="{{rule.rulename}}" name="rulename" readonly>
                    </div>
                    <div class="form-group has-feedback">
                        <label>Value</label>
                        <input type="text" class="form-control" value="{{rule.rulevalue}}" name="rulevalue">
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                             
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
              </div>
              <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
      </div>
      

    </section>
    <!-- /.content -->
  </div>
