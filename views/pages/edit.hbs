{{>header}}
<!-- /header -->
    <!-- header-menu -->
    {{>header-menu}}
    <!-- /header-menu -->
  
    <!-- Left side column. contains the logo and sidebar menu -->
    {{>side-menu-admin}}
    <!-- /sidebar menu-->


<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Edit Employee</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Edit</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <!-- Default box -->
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit General Details</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form role="form" action="/home/editempvalue" method="POST">
                        <input type="hidden" name="empId" value="{{employee._id}}" />
                        <!-- Name -->
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" name="name" value="{{employee.name}}" class="form-control" placeholder="Enter ...">
                        </div>
                        <!-- Email -->
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" value="{{employee.email}}" class="form-control" placeholder="Enter ...">
                        </div>
                        <!-- password -->
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" value="" class="form-control" placeholder="Enter ...">
                        </div>
                        <!-- Date of Birth -->
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" name="dob" value="{{employee.dob}}" class="form-control pull-right" id="datepicker">
                            </div>
                        </div>
                        <!-- Job roll -->
                        <div class="form-group">
                            <label>Job Title</label>
                            <select class="form-control" name="jobtitle">
                                <option value="Software Developer" {{#ifEq employee.jobtitle "Software Developer"}} selected {{/ifEq}}>Software Developer</option>
                                <option value="Software Support Person" {{#ifEq employee.jobtitle "Software Support Person"}} selected {{/ifEq}}>Software Support Person</option>
                                <option value="Human resource" {{#ifEq employee.jobtitle "Human resource"}} selected {{/ifEq}}>Human resource</option>
                            </select>
                        </div>
                        <!-- phone -->
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="text" name="phone" value="{{employee.phone}}" class="form-control" placeholder="Enter ...">
                        </div>
                        <!-- Address -->
                        <div class="form-group">
                            <label>Address</label>
                            <textarea class="form-control" name="address" rows="3" placeholder="Enter ...">{{employee.address}}</textarea>
                        </div>
                        <!-- checkbox -->
                        <div class="form-group">
                            <label>Language known</label>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="language" value="English" {{#employee.language}}{{#ifEq this "English"}} checked {{/ifEq}}{{/employee.language}}>
                                    English
                                </label>
                                <label>
                                    <input type="checkbox" name="language" value="Hindi" {{#employee.language}}{{#ifEq this "Hindi"}} checked {{/ifEq}}{{/employee.language}}>
                                    Hindi
                                </label>
                                <label>
                                    <input type="checkbox" name="language" value="Bengali" {{#employee.language}}{{#ifEq this "Bengali"}} checked {{/ifEq}}{{/employee.language}}>
                                    Bengali
                                </label>
                            </div>
                        </div>

                        <!-- radio -->
                        <div class="form-group">
                            <label>Sex</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="sex" id="optionsRadios1" value="Male" {{#ifEq employee.sex "Male"}} checked {{/ifEq}} >
                                    Male
                                </label>
                                <label>
                                    <input type="radio" name="sex" id="optionsRadios2" value="Female" {{#ifEq employee.sex "Female"}} checked {{/ifEq}}>
                                    Female
                                </label>
                            </div>
                        </div>
                         <!-- Job roll -->
                        <div class="form-group">
                            <label>User type</label>
                            <select class="form-control" name="utypeid">
                                <option value="2" {{#ifEq employee.utypeid "2"}} selected {{/ifEq}}>Employee</option>
                                <option value="1" {{#ifEq employee.utypeid "2"}} selected {{/ifEq}}>Admin</option>
                            </select>
                        </div>

                        
                        
                        <div class="box-footer">
                            <button type="submit" class="btn btn-info pull-right">Submit</button>
                        </div>

                        </form>
                    </div><!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div><!--/.col-->
        </div><!-- /.row -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
<!--footer -->
{{>footer}}
<!--/footer -->